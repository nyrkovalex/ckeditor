.cke_chrome
  display: block
  border: none
  padding: 0
  box-shadow: none
  visibility: inherit

.cke_inner
  display: block
  -webkit-touch-callout: none
  background: #fff
  padding: 0

.cke_float
  border: none

  & .cke_inner
    padding-bottom: 0

  & .cke_top
    border: 1px solid #b6b6b6
    border-bottom-color: #999

.cke_top,
.cke_bottom
  display: block
  overflow: hidden

.cke_top
  font: 11px/1.5 Verdana, Arial, sans-serif
  padding: 0
  white-space: normal
  cursor: default
  display: flex
  flex-direction: column
  padding-bottom: 10px

  .cke_maximized &
    padding: 6px 8px 2px

.cke_bottom
  font: $islands_text_s/1.5 $fontFamily
  padding: 0px 8px
  position: relative

.cke_browser_ios
  & .cke_contents
    overflow-y: auto
    -webkit-overflow-scrolling: touch

.cke_wysiwyg_div
  display: block
  height: 100%
  overflow: auto
  padding: 0
  outline-style: none
  box-sizing: border-box

  .cke_maximized &
    padding: 0 10px

.cke_contents
  display: flex
  overflow: hidden
  flex-direction: column

.cke_contents_wrap
  position: relative

.cke_wysiwyg_frame,
.cke_wysiwyg_div
  background-color: #fff
